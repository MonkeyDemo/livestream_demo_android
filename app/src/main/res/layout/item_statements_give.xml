<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_gift"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gift_default"/>
    <TextView
        android:id="@+id/tv_uname"
        android:layout_toRightOf="@id/img_gift"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_toname"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_uname"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_toname"
        android:layout_toRightOf="@id/img_gift"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_price"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />
</RelativeLayout>